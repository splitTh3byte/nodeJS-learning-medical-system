<%- include('includes/header.ejs') %>
<div id="wrapper">

  <!-- Sidebar -->
<%- include('includes/navigation.ejs') %>
  

  <!-- END NAVIGATION -->

  
<!--
     Begin "Products" section         -->

  <div id="page-wrapper">
    
    <div class="row">
      <div class="col-lg-12">
        <h1>Dashboard <small>Statistics Overview</small></h1>
        <ol class="breadcrumb">
       
        </ol>
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <a class="alert-link" href="/">Interfata personalizata</a>! Aici fiecare user va avea un dashboard personalizat in functie de analize , programari , retete etc
        </div>
      </div>
    </div><!-- /.row -->

    <div class="row">

      <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              Oferta cu Analizele disponibile
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                          
                            <tr>
                                <th>Categorie  Analiza</th>
                                <th>Nume Analiza</th>
                                <th>Pret</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% for (let analiza of listaAnalize) { %>
                            <tr class="odd gradeX">
                              <td><%= analiza.Categorie %></td>
                              <td><%= analiza.Nume %></td>
                              <td><%= analiza.Pret %> Lei</td>
                              <% if(role=='user'){ %>
                                <form action="/cart" method="POST">
                                  
                                  <td>
                                    
                                  <input type="hidden" name="pret" value="<%= analiza.Pret %>"> 
                                  <input type="hidden" name="nume" value="<%= analiza.Nume %>">
                                  <button type="submit" class="btn btn-success btn-sm" name="idAnaliza" value="<%= analiza._id %>">Adauga in Cos</button>
                                  </td>

                                </form>
                              <%} %>
                              <% if(role=='admin') { %>
                               
                                <td>
                                  <form action="/deleteAnaliza" method="POST">
                                    <input type="hidden" name="id" value="<%= analiza._id %>">
                                <button type="submit" class="btn btn-danger btn-sm">DELETE</button>

                                  </form>
                                  <br>
                                  <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editAnalize-modal" id="modal-id" data-id="<%=analiza._id %>">Update</button>

                                </td>
                                <% } %>
                              <% } %>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
                


       </div><!-- /.row -->
       <div class="modal" tabindex="-1" role="dialog" id ="editAnalize-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Editeaza Analiza</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              

              <form action="/editAnaliza" method="POST">

                <div class="form-group">
                
        <div class="form-group">
          <input type="hidden" id="analizaid" value="" name='analizaid'>
          <label for="exampleInputEmail1">Pret : </label>
          <input type="text" class="form-control" placeholder="" name="pret">
        
        </div>
             
    </div>
    <div class="modal-footer">
             
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-warning btn-sm">Update</button>

            </form>
            </div>
          </div>
        </div>
      </div>


      <script>




      </script>
    

